<script>
    async function setDetectionTime() {
        const startTime = document.getElementById('startTime').value;
        const endTime = document.getElementById('endTime').value;

        // Send the start and end time to the server using fetch
        const response = await fetch('/set_detection_time', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ startTime, endTime }),
        });

        // Log the server response (you can handle it accordingly in your application)
        console.log(await response.text());
    }
</script>

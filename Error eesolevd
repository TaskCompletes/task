var criteriaMessages = {
  tooShort: "<li>7 or more characters</li>",
  addLowerCase: "<li>1 or more lower case characters</li>",
  addUpperCase: "<li>1 or more upper case characters</li>",
  addNumbers: "<li>1 or more numbers</li>"
  };

displaySuggestions(criteriaMessages);

function displaySuggestions(criteriaMessages)
{
    var messagesuggestions = document.getElementById("password suggestions");
      messagesuggestions.innerHTML = "<ul>"+criteriaMessages.tooShort+
                                      criteriaMessages.addLowerCase+
                                      criteriaMessages.addUpperCase+
                                      criteriaMessages.addNumbers+"</ul>";
}
function displaysomething(hasLowercase,hasUppercase,hasNumbers,password){
  let good = "<span class ='good'>h</span>";
  password = password.trim();
  criteriaMessages.tooShort = checkLength(password,good);
  criteriaMessages.addUpperCase = checkUpperCaseLetters(hasUppercase,good);
  criteriaMessages.addLowerCase = checkLowerCaseLetters(hasLowercase,good);
  criteriaMessages.addNumbers = checkHasNumber(hasNumbers,good);
  displaySuggestions(criteriaMessages);
   
}

function checkLength(password,good) {
  criteriaMessages.tooShort = criteriaMessages.tooShort.trim();
  if(password.length >=7){
     return criteriaMessages.tooShort.includes(good) ? criteriaMessages.tooShort : criteriaMessages.tooShort.concat(good) ;
  }
  else {
    return criteriaMessages.tooShort.includes(good) ? criteriaMessages.tooShort.replace(good,"") : criteriaMessages.tooShort ;
  }
}
function checkUpperCaseLetters(hasUppercase,good) {
  criteriaMessages.addUpperCase = criteriaMessages.addUpperCase.trim();
  if(hasUppercase) {
     return criteriaMessages.addUpperCase.includes(good) ? criteriaMessages.addUpperCase : criteriaMessages.addUpperCase.concat(good);
  }
  else {
    return criteriaMessages.addUpperCase.includes(good) ? criteriaMessages.addUpperCase.replace(good,"") : criteriaMessages.addUpperCase;
  }
}
function checkLowerCaseLetters(hasLowercase,good) {
  criteriaMessages.addLowerCase =criteriaMessages.addLowerCase.trim();
  if(hasLowercase){
    return criteriaMessages.addLowerCase.includes(good) ? criteriaMessages.addLowerCase : criteriaMessages.addLowerCase.concat(good);
  }
  else {
    return criteriaMessages.addLowerCase.includes(good) ? criteriaMessages.addLowerCase.replace(good,"") : criteriaMessages.addLowerCase;
  }
}
function checkHasNumber(hasNumbers,good) {
  criteriaMessages.addNumbers = criteriaMessages.addNumbers.trim();
  if(hasNumbers) {
    return criteriaMessages.addNumbers.includes(good) ? criteriaMessages.addNumbers : criteriaMessages.addNumbers.concat(good);
  }
  else {
    return criteriaMessages.addNumbers.includes(good) ? criteriaMessages.addNumbers.replace(good,"") : criteriaMessages.addNumbers;
  }
}

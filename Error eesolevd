class UploadPageForm extends FormBase {
  /**
   * Flag for urgent code.
   * 
   * @var bool $isValidUrgentCode
   */
  protected bool $isValidUrgentCode = false;

public function updateAuthMessage(array &$form, FormStateInterface $form_state) : array {
    $wholeString = '';
    $textfieldOne = $form_state->getValue('textField_one');
    $textfieldTwo = $form_state->getValue('textField_two');
    $urgentcodefromuser = $textfieldOne . $textfieldTwo;
        $this->urgentCode = '95';
        if ($urgentCodeFromUser === $this->urgentCode) {
          $this->isValidUrgentCode = TRUE;
          $form['notifications']['info_box']['auth_message']['#markup']  = '<div class="code-message code-success"><p>Authorisation code approved</p></div>';
          return $form['notifications']['info_box'];
        }
        else {
          $this->isValidUrgentCode = FALSE;
          $form['notifications']['info_box']['auth_message']['#markup']  = '<div class="code-message code-error"><p>Invalid Authorisation code entered</p></div>';
          return $form['notifications']['info_box'];
      }  
    return $form['notifications']['info_box'];
  }
}

$data = [
    // Your data array goes here
];

$address = "1 Pennyburn Road, Kilwinning, Ayrshire, KA13 6SA"; // Example address

foreach ($data as $department => $details) {
    foreach ($details['sites'] as $site => $siteAddress) {
        if ($siteAddress === $address) {
            echo "Department: $department, Site: $site\n";
        }
    }
}

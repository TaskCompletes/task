foreach ($this->bundleDefinitionsByJurisdiction[$regionId] as $bundle) {
      $bundleType = $bundle->getType();
      if ( $bundleType != 'ukooc' && $bundleType != 'sooc' && $pco == false) {
        $form[$regionId][] = $this->addCardSelection($bundle);
      }
      elseif ($pco) {
        $form[$regionId][] = $this->addCardSelection($bundle);
      }
      if ($bundle->getAllowCrossCover() && $this->userHasCrossCoverPermission) {
        $newBundle = $bundle;
        $newBundle->setType($newBundle->getType() . '-cc');
        $newBundle->setDisplayName($newBundle->getDisplayName() . ' with cross cover');
        $form[$regionId][] = $this->addCardSelection($newBundle);
      }
    }



